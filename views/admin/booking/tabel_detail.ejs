<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <a href="/admin/booking"  class="btn btn-warning float-right mt--2 btn-sm">
          <i class="fas fa-arrow-right"></i>  Back
        </a>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <img src="https://ihsan-staycation.herokuapp.com/<%= booking.payments.proofPayment %>" alt=""  width="100%">
                <div class="row ml-2 mt-3">
                    <% if (booking.payments.status == 'Proses') { %>
                        <form method="POST" class="form-inline" action="/admin/booking/<%= booking.id %>/confirm?_method=PUT">
                            <button type="submit" class="btn btn-success btn-sm"><i class="fas fa-check"></i> Confirmation </button>
                        </form>
                        <form method="POST" class="form-inline ml-2" action="/admin/booking/<%= booking.id %>/reject?_method=PUT">
                            <button type="submit" class="btn btn-danger btn-sm"><i class="fas fa-times"></i> reject </button>
                        </form>
                    <% } %>
                </div>
            </div>
            <div class="col-md-8">
                <div class="table-responsive">
                    <table class="table table-bordered" id="tabel-activity" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Name Member</th>
                            <th>Total</th>
                            <th>Bank Name</th>
                            <th>Title</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><%= booking.memberId.firstName %> <%= booking.memberId.lastName %></td>
                            <td>$ <%= booking.total %></td>
                            <td><%= booking.payments.bankFrom %></td>
                            <td><%= booking.itemId.title %></td>
                        </tr>
                    </tbody>
                    
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>