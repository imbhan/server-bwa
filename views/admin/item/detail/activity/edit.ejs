
<!-- Modal -->
<div class="modal fade" id="edit-activity" tabindex="-1" aria-labelledby="editLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="editLabel">Edit Activity</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <form method="POST" action="/admin/item/activity/edit?_method=PUT"  enctype="multipart/form-data">
          <div class="modal-body">
            <div class="form-group">
              <label for="name">Name</label>
              <input type="text" name="name" id="name" class="form-control activity-name" required  placeholder="Enter Name">
            </div>
            <div class="form-group">
              <label for="type">Type</label>
              <input type="text" name="type" id="type" class="form-control activity-type" required  placeholder="Type">
            </div>
            <div class="form-group">
              <label for="name">Image</label>
              <input type="file" name="image" id="name" class="form-control" >
              <span>Pilih ganbar untuk update image</span>
            </div>
          </div>
          <div class="modal-footer">
            <input type="hidden" name="id" class="activity-id" id="id"> 
            <input type="hidden" name="itemId" value="<%=  itemId %>">
            <button type="submit" class="btn btn-primary">Edit Activity</button>
          </div>
        </form>
      </div>
    </div>
  </div>