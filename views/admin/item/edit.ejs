<div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
  <div class="card shadow mb-4">
    <div class="card-body">
      <form method="post" action="/admin/item/<%= items.id %>?_method=PUT" enctype="multipart/form-data">
          <div class="form-group">
            <label for="title">Title</label>
            <input type="text" name="title" id="title" class="form-control" required  placeholder="Title" value="<%= items.title %>">
          </div>
          <div class="form-group">
            <label for="price">Price</label>
            <input type="number" name="price" id="price" class="form-control" required  placeholder="Price" value="<%= items.price %>">
          </div>
          <div class="form-group">
            <label for="city">City</label>
            <input type="text" name="city" id="city" class="form-control" required  placeholder="City" value="<%= items.city %>">
          </div>
          <div class="form-group">
            <label for="category">Category</label>
            <select name="categoryId" class="form-control" id="category">
              <option value="">--- Category---</option>
              <% categories.forEach(category => { %>
                <option value="<%= category.id %>" <%= category.id == items.categoryId.id ? 'selected' : '' %>    class="text-capitalize"><%= category.name %> </option>
              <% }) %>
            </select>
          </div>
          <div class="form-group">
            <label for="name">Image</label>
            <input type="file" name="image" id="name" multiple class="form-control" >
          </div>
          <div class="form-group">
            <label for="description">Description</label>
            <textarea  name="description" id="description" class="form-control" placeholder="description"><%= items.description %> </textarea>
          </div>
        <button type="submit" class="btn btn-primary">Update Item</button>
      </form>
  
    </div>
  </div>
      
</div>